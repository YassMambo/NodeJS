<!DOCTYPE html>
<html>
  <head>
    <title>Yasser Projet</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  </head>
  <body>
    <%- include('includes/header') %>
    <div class="container">
      <div class="row">
        <h3>Détail article</h3>
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">Article numéro <%= article.id %></h5>
            <strong class="card-text bold">Titre</strong>
            <p class="card-text"><%= article.description %></p>
            <strong class="card-text bold">Description</strong>
            <p class="card-text"><%= article.description %></p>
            <strong class="card-text bold">Description</strong>
            <p class="card-text">
              <% user.map( user => { %>
              <% if (user.id == article.user){ %>
              <td><%= user.firstname %> <%= user.lastname %></td>
              <% } else {%>
                  <td> Aucun utilisateur</td>
              <% } %>
              <%})%>
            </p>
            <a href="/" class="btn btn-primary">Retournez à la liste des articles</a>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</body>
</html>